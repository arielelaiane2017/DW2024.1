
// calculadora \\
function calcularOperacao(valor1, valor2, operador) {
    let resultado;

    switch (operador) {
        case '+':
            resultado = valor1 + valor2;
            break;
        case '-':
            resultado = valor1 - valor2;
            break;
        case '*':
            resultado = valor1 * valor2;
            break;
        case '/':
            resultado = valor1 / valor2;
            break;
        default:
            console.log("Operador inv√°lido.");
            return;
    }

    console.log(resultado);
}



calcularOperacao(10, 5, '+'); 
calcularOperacao(10, 5, '-'); 
calcularOperacao(10, 5, '*'); 
calcularOperacao(10, 5, '/'); 
